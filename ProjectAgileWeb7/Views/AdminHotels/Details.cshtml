@model ProjectAgileWeb7.Models.Hotel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="float-lg-right">
    <a asp-action="Index" class="btn btn-outline-primary btn-sm"><i class="fas fa-arrow-alt-circle-left"></i>&nbsp; Back to List</a>
    <a asp-action="Edit" asp-route-id="@Model.HotelId" class="btn btn-outline-warning btn-sm"><i class="fas fa-edit"></i>&nbsp; Edit</a>
</div>
<h3 class="text-info"><i class="fas fa-info-circle"></i>&nbsp; @Model.Name</h3>
<hr />
<div>    
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HotelId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HotelId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Website)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Website)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ZipCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ZipCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Country)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Country)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Stars)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Stars)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DistanceFromCenter)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DistanceFromCenter)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Latitude)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Latitude)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Longitude)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Longitude)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImageUrl)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ImageUrl)
        </dd>
        <dt class="col-sm-2">
            Image
        </dt>
        <dd class="col-sm-10">
            <img src="@Url.Content(Model.ImageUrl)" width="200" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Rooms)
        </dt>
        <dd class="col-sm-10">
            <a asp-action="Index" asp-controller="AdminRooms" asp-route-id="@Model.HotelId" class="btn btn-sm btn-outline-info">Show Hotel Rooms</a>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HotelFacilities)
        </dt>
        <dd class="col-sm-10">
            <a asp-action="Index" asp-controller="AdminHotelFacilities" asp-route-id="@Model.HotelId" class="btn btn-sm btn-outline-info">Show Hotel Facilities</a>
        </dd>
    </dl>
</div>
