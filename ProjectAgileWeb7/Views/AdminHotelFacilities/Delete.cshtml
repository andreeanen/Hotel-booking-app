@model ProjectAgileWeb7.Models.HotelFacility

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="float-lg-right">
    <a asp-action="Index" class="btn btn-outline-primary btn-sm"><i class="fas fa-arrow-alt-circle-left"></i>&nbsp; Back to List</a>
</div>

<h3 class="text-danger"><i class="fas fa-trash-alt"></i>&nbsp; Delete</h3>

<h4>Are you sure you want to delete this facility from this hotel?</h4>

<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Hotel)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Hotel.HotelId) - @Html.DisplayFor(model => model.Hotel.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Facility)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Facility.FacilityId) - @Html.DisplayFor(model => model.Facility.Name)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="HotelId" />
        <input type="hidden" asp-for="FacilityId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
